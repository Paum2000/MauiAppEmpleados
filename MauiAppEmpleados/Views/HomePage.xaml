<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEmpleados.Views.HomePage"
             Title="{Binding Title}">
    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, Auto, *" Padding="20" RowSpacing="20">

            <Label Grid.Row="0" Text="Resumen del Sistema" 
                   FontSize="28" />

            <Grid Grid.Row="1" ColumnDefinitions="*, *" ColumnSpacing="15" HeightRequest="120">

                <Frame Grid.Column="0" BackgroundColor="#0078D4" CornerRadius="10" HasShadow="True" BorderColor="Transparent">
                    <StackLayout VerticalOptions="Center">
                        <Label Text="Total Empleados" TextColor="White" FontSize="14"/>
                        <Label Text="{Binding TotalEmpleados}" TextColor="White" FontSize="36" />
                    </StackLayout>
                </Frame>

                <Frame Grid.Column="1" BackgroundColor="#107C10" CornerRadius="10" HasShadow="True" BorderColor="Transparent">
                    <StackLayout VerticalOptions="Center">
                        <Label Text="Departamentos" TextColor="White" FontSize="14"/>
                        <Label Text="{Binding TotalDepartamentos}" TextColor="White" FontSize="36" />
                    </StackLayout>
                </Frame>
            </Grid>

            <StackLayout Grid.Row="2" Spacing="10">
                <Label Text="Explorar por Departamento" FontSize="18" />
                <Frame Padding="0" CornerRadius="5" BorderColor="Gray">
                    <Picker Title="Selecciona un Departamento"
                            ItemsSource="{Binding Departamentos}"
                            SelectedItem="{Binding SelectedDepartment}"
                            ItemDisplayBinding="{Binding Name}"
                            />
                </Frame>
            </StackLayout>

            <CollectionView Grid.Row="3" ItemsSource="{Binding EmpleadosFiltrados}" HeightRequest="300">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" CornerRadius="8" HasShadow="False" BorderColor="#ddd" >
                            <Grid ColumnDefinitions="40, *">
                                <Image Grid.Column="0" Source="{Binding FullImageUrl}" 
                                       Aspect="AspectFill" HeightRequest="40" WidthRequest="40">
                                    <Image.Clip>
                                        <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                                    </Image.Clip>
                                </Image>

                                <StackLayout Grid.Column="1" Margin="10,0,0,0" VerticalOptions="Center">
                                    <Label Text="{Binding Name}"  FontSize="14" LineBreakMode="TailTruncation"/>
                                    <Label Text="{Binding Description}" FontSize="11" TextColor="Gray" LineBreakMode="TailTruncation"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </ScrollView>
</ContentPage>